<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="@string/scroll_view_of_all_available_places"
    android:fillViewport="true"
    tools:context=".Fragments.HomeFragment">

    <LinearLayout
        android:id="@+id/linear_layout_fragment_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Carousel -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_layout_carousel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include
                    android:id="@+id/includedLayout1"
                    layout="@layout/component_carousal" />

                <include
                    android:id="@+id/includedLayout2"
                    layout="@layout/component_carousal" />

                <include
                    android:id="@+id/includedLayout3"
                    layout="@layout/component_carousal" />

                <include
                    android:id="@+id/includedLayout4"
                    layout="@layout/component_carousal" />
            </LinearLayout>

        </HorizontalScrollView>

        <!-- Category Header -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp">

            <!-- ImageView as the background -->
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/header_image_description"
                android:scaleType="centerCrop"
                android:src="@drawable/header_background_images9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/cornerSize_10_percent" />

            <!-- TextView on top of the ImageView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/category_text"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </FrameLayout>

        <!-- Categories -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:scrollbars="vertical" />

        <!-- Brand Header -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp">

            <!-- ImageView as the background -->
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/header_image_description"
                android:scaleType="centerCrop"
                android:src="@drawable/header_background_images9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/cornerSize_10_percent" />

            <!-- TextView on top of the ImageView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/text_brands"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </FrameLayout>
        <!-- Brands -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/includedLayout111"
                layout="@layout/component_brand" />

            <include
                android:id="@+id/includedLayout222"
                layout="@layout/component_brand" />

            <include
                android:id="@+id/includedLayout333"
                layout="@layout/component_brand" />

            <include
                android:id="@+id/includedLayout444"
                layout="@layout/component_brand" />

            <include
                android:id="@+id/includedLayout777"
                layout="@layout/component_brand" />

            <include
                android:id="@+id/includedLayout555"
                layout="@layout/component_brand" />

        </LinearLayout>

        <!-- New Arrival Header -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp">

            <!-- ImageView as the background -->
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/header_image_description"
                android:scaleType="centerCrop"
                android:src="@drawable/header_background_images9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/cornerSize_10_percent" />

            <!-- TextView on top of the ImageView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/text_new_arrivals"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </FrameLayout>
        <!-- New Arrivals -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include
                    android:id="@+id/includedLayout1111"
                    layout="@layout/component_item" />

                <include
                    android:id="@+id/includedLayout2222"
                    layout="@layout/component_item" />

                <include
                    android:id="@+id/includedLayout3333"
                    layout="@layout/component_item" />

                <include
                    android:id="@+id/includedLayout4444"
                    layout="@layout/component_item" />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Trending Header -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp">

            <!-- ImageView as the background -->
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/header_image_description"
                android:scaleType="centerCrop"
                android:src="@drawable/header_background_images9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/cornerSize_10_percent" />

            <!-- TextView on top of the ImageView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/text_trending"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </FrameLayout>
        <!-- Trending -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include
                    android:id="@+id/includedLayout11113"
                    layout="@layout/component_item" />

                <include
                    android:id="@+id/includedLayout22223"
                    layout="@layout/component_item" />

                <include
                    android:id="@+id/includedLayout33333"
                    layout="@layout/component_item" />

                <include
                    android:id="@+id/includedLayout44443"
                    layout="@layout/component_item" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>
