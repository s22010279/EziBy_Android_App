<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_shopping_cart_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">
        <!-- Product Image -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:contentDescription="@string/description_image_of_an_item"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/loading_image_light_grey_100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Product Name -->
        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_product_name"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/product_image"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Product Price -->
        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_product_price"
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/product_image"
            app:layout_constraintTop_toBottomOf="@id/product_name" />

        <!-- Quantity Buttons and EditText -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/decrement_button"
            style="@style/add_to_cart_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="@string/text_minus_mark"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@id/product_image"
            app:layout_constraintTop_toBottomOf="@id/product_price" />

        <TextView
            android:id="@+id/shopping_cart_quantity"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="@string/text_quantity"
            app:layout_constraintStart_toEndOf="@id/decrement_button"
            app:layout_constraintTop_toTopOf="@id/decrement_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/increment_button"
            style="@style/add_to_cart_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:text="@string/text_plus_mark"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@id/shopping_cart_quantity"
            app:layout_constraintTop_toTopOf="@id/decrement_button" />

        <!-- Heart Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/favorite_button"
            style="@style/add_to_cart_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:icon="@drawable/icons8_heart_50_filled"
            app:layout_constraintStart_toStartOf="@id/decrement_button"
            app:layout_constraintTop_toBottomOf="@id/decrement_button" />

        <!-- Delete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_button"
            style="@style/add_to_cart_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="#F60002"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:icon="@drawable/outline_delete_outline_24"
            app:layout_constraintEnd_toEndOf="@+id/increment_button"
            app:layout_constraintTop_toTopOf="@id/favorite_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>